<!DOCTYPE html>
<html>
<head>
  <title>EmailBuilder</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<% if flash[:notice].present? %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= yield %>
</body>
</html>
